    background-color: #f6ffed !important;
    border-left: 3px solid #52c41a !important;
    box-shadow: 0 0 12px rgba(82, 196, 26, 0.3) !important;
    animation: flash-green 1.5s ease;
}

.step-added {
    animation: slide-in-right 0.5s ease forwards, flash-green 1.5s ease;
}

@keyframes flash-green {
    0% { background-color: #f6ffed; }
    30% { background-color: #d9f7be; }
    70% { background-color: #b7eb8f; }
    100% { background-color: #f6ffed; }
}

@keyframes slide-in-right {
    0% {
        transform: translateX(30px);
        opacity: 0;
    }
    100% {
        transform: translateX(0);
        opacity: 1;
    }
}

